<UserControl
    x:Class="Arstive.Display.Element.HoldDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Arstive.Display.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arstive.Display.Element"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="_this"
    Width="140"
    Height="{Binding Length}"
    d:DesignHeight="330"
    d:DesignWidth="140"
    DataContext="{Binding ElementName=_this}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <c:LengthConverter x:Key="LengthConverter" />
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Rectangle
                Width="70"
                Height="{Binding Length, Converter={StaticResource LengthConverter}}"
                d:Height="280">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#4CFFFFFF" />
                        <GradientStop Offset="1" Color="#FFFFFFFF" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Polygon
                DockPanel.Dock="Bottom"
                Fill="White"
                Points="25,0 115,0 70,40" />
        </StackPanel>
    </Grid>
</UserControl>
