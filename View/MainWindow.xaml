<Window
    x:Class="Arstive.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controller="clr-namespace:Arstive.Controller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arstive"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="GameWindow"
    Title="Framework - Game"
    Width="1150"
    Height="710"
    Loaded="MainWindow_OnLoaded"
    mc:Ignorable="d">

    <!--  Binding score,etc.  -->
    <Window.Resources>
        <controller:GameController x:Key="Game" />
    </Window.Resources>

    <Grid Name="GameGrid">
        <StackPanel Orientation="Vertical" />
        <TextBlock
            Margin="10"
            HorizontalAlignment="Right"
            FontFamily="Consolas"
            FontSize="30"
            Foreground="White"
            Text="{Binding Source={StaticResource Game}, Path=Score}" />
    </Grid>
    <Window.Background>
        <SolidColorBrush Color="Black" />
    </Window.Background>
</Window>
